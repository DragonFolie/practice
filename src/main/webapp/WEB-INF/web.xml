    </servlet-mapping>

    <!-- LogOut servlet -->
    <servlet>
        <servlet-name>logoutUa</servlet-name>
        <servlet-class>servlets.LogoutServletUa</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutUa</servlet-name>
        <url-pattern>/logoutUa</url-pattern>
    </servlet-mapping>



    <!-- Admin servlet -->
    <servlet>
        <servlet-name>adminUa</servlet-name>
        <servlet-class>servlets.AdminServletUa</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminUa</servlet-name>
        <url-pattern>/adminUa</url-pattern>
    </servlet-mapping>


    <!-- UserProfile servlet -->
    <servlet>
        <servlet-name>userProfileUa</servlet-name>
        <servlet-class>servlets.UserProfileUa</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userProfileUa</servlet-name>
        <url-pattern>/userProfileUa</url-pattern>
    </servlet-mapping>
















    <!-- Custom Tag servlet -->

    <servlet>
        <servlet-name>tag</servlet-name>
        <servlet-class>servlets.TagServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>tag</servlet-name>
        <url-pattern>/tag</url-pattern>
    </servlet-mapping>

    <!-- Authentication filter -->

    <filter>
        <filter-name>mainFilter</filter-name>
        <filter-class>Filter.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>mainFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>











</web-app>