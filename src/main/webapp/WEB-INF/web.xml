<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <request-character-encoding>UTF-8</request-character-encoding>







    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>

    <error-page>
        <error-code>408</error-code>
        <location>/408.jsp</location>
    </error-page>


    <error-page>
        <error-code>500</error-code>
        <location>/500.jsp</location>
    </error-page>


    <!-- add servlet -->
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>servlets.AddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- list servlet -->
    <servlet>
        <servlet-name>movies</servlet-name>
        <servlet-class>servlets.ListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>movies</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <!-- New Movie servlet -->
    <servlet>
        <servlet-name>newMovie</servlet-name>
        <servlet-class>servlets.NewMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>newMovie</servlet-name>
        <url-pattern>/newMovie</url-pattern>
    </servlet-mapping>

    <!-- New Session for movie servlet -->
    <servlet>
        <servlet-name>newSession</servlet-name>
        <servlet-class>servlets.NewSessionForMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>newSession</servlet-name>
        <url-pattern>/newSession</url-pattern>
    </servlet-mapping>

    <!-- Login servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- LogOut servlet -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>



    <!-- Admin servlet -->
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>servlets.AdminServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


    <!-- UserProfile servlet -->
    <servlet>
        <servlet-name>userProfile</servlet-name>
        <servlet-class>servlets.UserProfile</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userProfile</servlet-name>
        <url-pattern>/userProfile</url-pattern>
    </servlet-mapping>


    <!-- UserProfile servlet -->
    <servlet>
        <servlet-name>shop</servlet-name>
        <servlet-class>servlets.ShopServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>shop</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>


    <!-- Movie buy servlet -->
    <servlet>
        <servlet-name>movieBuy</servlet-name>
        <servlet-class>servlets.BuyMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>movieBuy</servlet-name>
        <url-pattern>/movieBuy</url-pattern>
    </servlet-mapping>






    <!-- Admin list of movies servlet -->
    <servlet>
        <servlet-name>adminlist</servlet-name>
        <servlet-class>servlets.AdminListMovieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminlist</servlet-name>
        <url-pattern>/adminlist</url-pattern>
    </servlet-mapping>




    <!-- Update  Status of movies servlet -->
    <servlet>
        <servlet-name>updateStatus</servlet-name>
        <servlet-class>servlets.UpdateMovieStatus</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateStatus</servlet-name>
        <url-pattern>/updateStatus</url-pattern>
    </servlet-mapping>








    <!-- UA  servlet --><!-- UA  servlet --><!-- UA  servlet --><!-- UA  servlet -->



    <!-- index servlet -->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>servlets.IndexUaServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>





